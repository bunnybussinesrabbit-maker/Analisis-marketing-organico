{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-server",
      "type": "shell",
      "command": "npm",
      "args": ["start"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Starting up http-server.*",
          "endsPattern": ".*Hit CTRL-C to stop the server.*"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "stop-server",
      "type": "shell",
      "command": "pkill",
      "args": ["-f", "http-server"],
      "isBackground": false,
      "presentation": {
        "echo": false,
        "reveal": "silent"
      }
    }
  ]
}
