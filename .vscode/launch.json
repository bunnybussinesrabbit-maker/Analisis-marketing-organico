{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-chrome",
      "request": "attach",
      "name": "Conectar a Chrome Local (Codespaces)",
      "port": 9222,
      "urlFilter": "http://127.0.0.1:5500/*", 
      "webRoot": "${workspaceFolder}",
      "timeout": 60000,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*",
        "/workspaces/${workspaceFolderBasename}/*": "${webRoot}/*"
      },
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    }
  ]
}